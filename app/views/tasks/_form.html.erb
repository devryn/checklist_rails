<h2><%= form_title %></h2>

<% if task.errors.any? %>
    <% task.errors.full_messages.each do |msg| %>
      <p> <%= msg %></p>
    <% end %>
  <% end %>

  <%= form_for(task) do |f| %>
  <label for="position">Position #</label>
  <%=f.number_field :position, class: 'form-control', min: 1 %>

    <label for="name">Task</label>
    <%=f.text_area :body, placeholder: 'What do you need to do?', class: 'form-control' %>

    <label for="completed">Completed?</label>
    <%= f.check_box :completed, class: 'form-control' %>

    <p><div class ='actions text-center'>
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
